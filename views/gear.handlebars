{{!-- gear items table --}}
<div class="container ">
  <div class="row">
    <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title text-center">Gear Items Inventory List</h5>
              <div>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">Add item</button>
                </div>

              <table class="table">
                <thead>
                  <tr>
                    <th class="item">Item</th>
                    <th class="type">Description</th>
                    <th class="type">Wgt.</th>
                    <th class="item">Storage Location</th>
                    <th class="onhand">Qty. On Hand</th>
                    <th class="onhand">Qty. Desired</th>
                    <th class="packed">Qty. Packed</th>
                    {{!-- <th class="packed">Qty. Desired</th>
                    <th class="total">Total Purchase Require</th>
                    <th class="made">Purchase Qty. Made</th> --}}

                    <th>Update</th>  
                      <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  
                    {{!-- <th scope="row">1</th> --}}
                    {{#each gearData}}
                    <tr>
                    <td>{{dataValues.itemName}}</td>
                    <td>{{dataValues.itemDescription}}</td>
                    <td>{{dataValues.itemWeight}}</td>
                    <td>{{dataValues.itemStorageLocation}}</td>
                    <td>{{dataValues.itemQuantityInStorage}}</td>
                    <td>{{dataValues.itemQuantityInPackingList}}</td>
                    <td>{{dataValues.UserId}}</td>
                      <td><button data-id={{id}} type="submit" class="edit-item btn btn-primary" data-order="true">Edit</button></td>
                      <td><button data-id={{id}} type="submit" class="delete-item btn btn-danger" data-order="true">Delete</button></td>
                    </tr>
                    {{/each}}
                  
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add a new item to your inventory</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="row g-3">
          <div class="col-md-6">
            <div class="form-group">
              <label for="itemName">Item Name</label>
              <input type="text" class="form-control" id="itemName" placeholder="">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="itemDescription">Description</label>
              <input type="text" class="form-control" id="itemDescription" placeholder="">
            </div>
          </div>
          <div class="col-6">
            <div class="form-group">
              <label for="itemWeight">Weight</label>
              <input type="text" class="form-control" id="itemWeight" placeholder="">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="itemStorageLocation">Storage Location</label>
              <input type="text" class="form-control" id="itemStorageLocation" placeholder="">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="itemQuantityInStorage">Quantity</label>
              <input type="text" class="form-control" id="itemQuantityInStorage" placeholder="">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="itemQuantityInPackingList">Quantity to pack</label>
              <input type="text" class="form-control" id="itemQuantityInPackingList" placeholder="">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
          </div>
            </div>
        </form>
    
    </div>
  </div>
</div>
